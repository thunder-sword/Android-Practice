<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 申请网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 申请录音和蓝牙设备使用权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyPractice"
        tools:targetApi="31">
        <activity
            android:name=".utils.TCPConnectorActivity"
            android:exported="false" />
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <activity
            android:name=".ChessGameActivity"
            android:exported="false" />
        <activity
            android:name=".OLDTCPConnectorActivity"
            android:exported="false"
            android:label="@string/title_activity_tcpconnecter"
            android:theme="@style/Theme.MyPractice" />
        <activity
            android:name=".TCPListenerActivity"
            android:exported="false"
            android:label="@string/title_activity_tcplistener"
            android:theme="@style/Theme.MyPractice" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyPractice">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>